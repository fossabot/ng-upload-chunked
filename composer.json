{
    "name": "hgouveia/ng-upload-chunked",
    "description": "Php implementation of the file chunked upload for the angular directive ng-file-upload",
    "keywords": [
        "ng-file-upload",
        "upload",
        "chunked",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose De Gouveia",
            "email": "dhgouveia@hotmail.com"
        }
    ],
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "peridot-php/peridot": "^1.19",
        "peridot-php/leo": "^1.6",
        "squizlabs/php_codesniffer": "^3.2",
        "victorjonsson/markdowndocs": "^1.3"
    },
    "suggest": {
        "peridot-php/peridot-code-coverage-reporters": "Required to test code coverage (only php>=7.0)"        
    },
    "scripts": {
        "test": [
            "composer install",
            "./vendor/bin/phpcs --standard=psr2 src/",
            "./vendor/bin/peridot test/"
        ]
    }
}
